[alias]
  a  = add
  b  = branch
  bb = switch
  bc = switch -c
  bk = branch -D
  cc = commit
  ca = commit --amend
  ce = commit --amend --no-edit
  cp = cherry-pick
  cu = reset HEAD^ --soft
  d  = diff
  ds = diff --cached
  da = diff HEAD
  dl = diff HEAD^ HEAD
  f  = fetch origin
  ff = pull
  h  = log --pretty=format:\"%Cgreen%ad %Cred%h %Creset| %s %Cblue%an\" --date=short
  k  = restore
  ms = merge --squash
  pp = push
  pf = push -f
  ra = rebase --abort
  rb = rebase
  rc = rebase --continue
  ri = rebase --interactive
  s  = status
  u  = restore --staged
  x  = reset
  xc = reset HEAD^ --hard
  xx = reset HEAD --hard
  z  = stash
  zp = stash pop
  ignore = update-index --assume-unchanged
  unignore = update-index --no-assume-unchanged
